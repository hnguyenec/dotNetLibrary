@using Microsoft.ApplicationInsights.AspNetCore
@inject JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Lakeview ILS</title>
    @Html.Raw(JavaScriptSnippet.FullScript)
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Coda" rel="stylesheet">
    <link href="https://code.getmdl.io/1.3.0/material.indigo-blue.min.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />

    
</head>
<body>
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
    <header class="custom-header mdl-layout__header mdl-layout__header--waterfall">
        <div class="mdl-layout__header-row">
            <span class="mdl-layout-title logo">
                <a href="/">Lakeview Library ILS</a>
            </span>
            <div class="mdl-layout-spacer"></div>
            <nav class="mdl-navigation mdl-layout--large-screen-only">
                <a class="mdl-navigation__link" asp-controller="Home" asp-action="Index">Home</a>
                <a class=" mdl-navigation__link" asp-controller="Catalog" asp-action="Index">Catalog</a>
                <a class=" mdl-navigation__link" asp-controller="Patron" asp-action="Index">Patrons</a>
                <a class=" mdl-navigation__link" asp-controller="Branch" asp-action="Index">Branches</a>
            </nav>
        </div>
    </header>
    <div class="page-content">
        @RenderBody()
    </div>
</div>
@RenderSection("Scripts", false)
@RenderSection("Styles", false)
</body>
</html>